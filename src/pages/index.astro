---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <header>
    <div class="search_input_wrapper">
      <input type="search" placeholder="Vyhľadajte svoju otázku" />
      <button>Vyhladať</button>
      <a href="/slovensko/" class="year_button">Data Slovensko</a>
    </div>
  </header>

  <div class="year_range">
    <h1>Zvoľ si rozpätie rokov, za ktoré chceš dáta analyzovať</h1>
    <div class="year_picker">
      <button class="year_button">1990</button>
      <button class="year_button">1994</button>
      <button class="year_button">2000</button>
      <button class="year_button">2022</button>
    </div>
  </div>

  <div class="grid_layout_changes">
    <h2>Najväčšie zmeny</h2>
    <div class="grid">
      <div class="card">
        <h3>Personálne charakteristiky</h3>
        <div class="card-wrapper">
          <div class="icon"></div>
          <div class="text">
            <h4>10%</h4>
            <div class="description">
              Slováci by mali radi za suseda homosexuála.
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="category_list">
    <h2>Zonam oblastí</h2>
    <div class="category_grid">
      <div class="category_holder">
        <div class="category_name">Personálne charakteristiky</div>
      </div>
    </div>
  </div>
</Layout>

<style>
  header {
    
    padding: 32px;

    border-radius: 8px;
    background-color: #ffffff;
  }

  .search_input_wrapper {
    display: flex;
    flex-direction: row;
  }

  input {
    height: 48px;
    width: 60%;

    font-size: 16px;

    padding: 0 12px;
    border: 2px solid rgba(0, 0, 0, 0.12);
    border-radius: 6px;
  }

  input:hover {
    border: 2px solid #274c77;
  }

  a {
    display: block;
    white-space: nowrap;

    height: 48px;
    font-size: 16px;
    line-height: 48px;

    margin-left: 10px;
    padding: 0 42px;
    border-radius: 6px;

    border: 0;

    text-decoration: none;
  }

  button {
    height: 48px;
    font-size: 16px;

    margin-left: 10px;
    padding: 0 42px;

    border: 2px solid transparent;
    border-radius: 6px;

    color: #ffffff;
    background-color: #a3cef1;
  }

  button:hover {
    background-color: #274c77;
    color: #ffffff;

    cursor: pointer;
  }

  .year_range {
    margin: 64px 0;
  }

  h1 {
    margin-bottom: 20px;
    text-align: center;
  }

  .year_picker {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    gap: 20px;
  }

  .year_button {
    font-size: 18px;
    font-weight: 600;

    padding: 0 64px;

    color: #000000;
    border: 2px solid #000000;
    background-color: transparent;
  }

  .year_button:hover {
    color: #ffffff;
    background-color: #000000;
  }

  .grid {
    display: grid;
    grid-template: auto / repeat(5, 1fr);

    gap: 18px;

    margin-bottom: 64px;
  }

  .card {
    background-color: #ffffff;
    padding: 24px;

    border-radius: 8px;

    cursor: pointer;
  }

  .card:hover {
    box-shadow: 0 20px 40px 4px rgb(0 0 0 / 8%);
  }

  h3 {
    margin: 0;

    padding-bottom: 16px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.12);
  }

  .card-wrapper {
    margin-top: 16px;
  }

  h4 {
    font-size: 32px;
    margin: 0 0 4px 0;
  }

  .category_grid {
    display: grid;
    grid-template: auto / repeat(5, 1fr);

    gap: 18px;

    margin-bottom: 64px;
  }

  .category_holder {
    background-color: #ffffff;

    border-radius: 8px;

    cursor: pointer;
  }

  .category_holder:hover {
    background-color: #000000;
    color: #ffffff;

    box-shadow: 0 20px 40px 4px rgb(0 0 0 / 8%);
  }

  .category_name {
    padding: 42px 42px 16px;

    font-size: 20px;
    font-weight: 600;

    cursor: pointer;
  }
</style>
